<UserControl x:Class="Practica_SchimbValutar.MVVM.Views.SelectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Practica_SchimbValutar.MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="200">
    <Grid>
        <Calendar x:Name="Calendar" Grid.Column="1" Width="185" Height="150" Margin="0,0,0,350" FontSize="20" FontWeight="Bold" SelectedDatesChanged="Calendar_SelectedDatesChanged"/>
        <Button Grid.Column="1" Width="185" Height="40" Margin="0,0,0,120" Content="Comision" Style="{StaticResource ButtonTheme}" Click="Comision_Click"/>
        <Button Grid.Column="1" Width="185" Height="40" Margin="0,00,0,30" Content="Valuta Straina" Style="{StaticResource ButtonTheme}" Click="Button_Click"/>
        <Button Grid.Column="1" Width="185" Height="40" Margin="0,60,0,0" Content="Tranzactii Azi" Style="{StaticResource ButtonTheme}" Click="Button_Click"/>
        <Button Width="185" Height="50" Margin="0,330,0,163" Content="  Tranzactii&#x0a;Avantajoase" Style="{StaticResource ButtonTheme}" Click="Button_Click"/>
    </Grid>
</UserControl>
